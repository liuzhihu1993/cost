<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fh.dao.UserInfoDao">

	<resultMap type="UserInfo" id="usermap">
		<id property="userId" column="user_id" />
		<result property="roleId" column="role_id" />
		<result property="userName" column="user_name" />
		<result property="userSex" column="user_sex" />
		<result property="userAge" column="user_age" />
		<result property="userAccount" column="user_account" />
		<result property="userPassword" column="user_password" />
		<result property="userSalary" column="user_salary" />
		<result property="userMark" column="user_mark" />
		<result property="roleName" column="role_name" />
	</resultMap>

	<!-- 用户登陆 -->
	<select id="login" parameterType="UserInfo" resultMap="usermap">
		select *
		from user_info where user_account=#{userAccount} and
		user_password=#{userPassword}
		and user_mark='1'
	</select>

	<!-- 添加用户 -->
	<insert id="add" parameterType="UserInfo">
		insert into user_info
		(role_id,user_name,user_sex,user_age,user_account,user_password,user_salary,user_mark)
		values(#{roleId},#{userName},#{userSex},#{userAge},#{userAccount},#{userPassword},#{userSalary},#{userMark})
	</insert>

	<!-- 修改用户信息 -->
	<update id="update" parameterType="UserInfo">
		update user_info
		<set>
			<if test="roleId!=null and roleId!=''">
				role_id=#{roleId},
			</if>
			<if test="userName!=null and userName!=''">
				user_name=#{userName},
			</if>
			<if test="userSex!=null and userSex!=''">
				user_sex=#{userSex},
			</if>
			<if test="userAge!=null and userAge!=''">
				user_age=#{userAge},
			</if>
			<if test="userAccount!=null and userAccount!=''">
				user_account=#{userAccount},
			</if>
			<if test="userPassword!=null and userPassword!=''">
				user_password=#{userPassword},
			</if>
			<if test="userSalary!=null and userSalary!=''">
				user_salary=#{userSalary},
			</if>
			<if test="userMark!=null and userMark!=''">
				user_mark=#{userMark},
			</if>
		</set>
		where user_id=#{userId}
	</update>

	<!-- 根据添加查询用户信息 -->
	<select id="getUser" parameterType="UserInfo" resultMap="usermap">
		select a.*,b.role_name from user_info a,role_info b where a.role_id =
		b.role_id

		<if test="userId!=null and userId!=''">
			and a.user_id = #{userId}
		</if>
		<if test="userAccount!=null and userAccount!=''">
			and a.user_account = #{userAccount}
		</if>


	</select>

	<!-- 查询用户信息 -->
	<select id="list" parameterType="UserInfo" resultMap="usermap">
		select a.*,b.role_name from user_info a,role_info b where
		a.user_mark=#{userMark} and a.role_id=b.role_id
		<if test="userName!=null and userName!=''">
			and a.user_name like #{userName}
		</if>
		order by a.user_id desc
		<if test="start!=-1">
			limit #{start},#{length}
		</if>
	</select>
	<!-- 查询总记录数 -->
	<select id="getcount" parameterType="UserInfo" resultType="Long">
		select count(1) from user_info a,role_info b where
		a.user_mark=#{userMark} and a.role_id=b.role_id
		<if test="userName!=null and userName!=''">
			and a.user_name like #{userName}
		</if>
		order by a.user_id desc

	</select>

</mapper>
